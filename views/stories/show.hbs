<div class="row">
    <div class="col s12 m8">
        <h4>{{story.title}}
            <small>{{{editIcon story.user user story._id false}}}</small>
        </h4>
        <div class="card story custom-card-story" style="width: -webkit-fill-available;width:-moz-available;">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                <h6>{{{story.body}}}</h6>
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align custom-card-story">
            <div class="card-content">
                <span class="card-title">{{story.user.displayName}}</span>
                <img src="{{story.user.image}}" class="circle responsive-img img-small" onerror="this.src='/assets/t1.jpg'">
            </div>
            <div class="card-action">
                <a href="/stories/user/{{story.user._id}}">More From {{story.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>